void LCD_write_font(uint16_t xx, uint16_t yy, uint8_t scale, unsigned char character, uint8_t colorA, uint8_t colorB) {
  character -= 32;
  PHNDisplay8Bit::writeImage_1bit(xx, yy, 8, 5, scale, font + (character * 5), DIR_DOWN, colorA, colorB);
}

void LCD_write_string(uint16_t xx, uint16_t yy, uint8_t scale, char* text, uint8_t colorA, uint8_t colorB) {
  while (*text) {
    LCD_write_font(xx, yy, scale, *text, colorA, colorB);
    xx += scale * 8;
    text++;
  }
}
